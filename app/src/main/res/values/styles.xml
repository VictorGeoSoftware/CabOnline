<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OpenSansRegular13" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="OpenSansRegular16" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OpenSansItalic16" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans_italic</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey_text_dark</item>
    </style>

    <style name="OpenSansItalic14" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans_italic</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_text_dark</item>
    </style>

    <style name="OpenSansBoldBlue14" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue_medium_advise_message</item>
    </style>

    <style name="OpenSansBoldBlue16" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue_medium_advise_message</item>
    </style>

    <style name="OpenSansRegularBlue13" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/blue_medium_advise_message</item>
    </style>

    <style name="OpenSansBoldBlack16" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="OpenSansSemiBoldBlack16" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="OpenSansBoldBlue18" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue_medium_advise_message</item>
    </style>

    <style name="DancingScriptWhite" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/dancing_script_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GreenButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:height">60dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/background_button_green</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
</resources>
