<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--var filename: String? = null,-->
    <!--var author: String? = null,-->
    <!--var author_url: String? = null,-->
    <!--var post_url: String? = null-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/imgPhoto"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <TextView
            android:id="@+id/txtAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author"
            style="@style/OpenSansRegular16"/>

        <TextView
            android:id="@+id/txtAuthorUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author url"
            android:textColor="@color/blue_medium_advise_message"
            style="@style/OpenSansRegular13"/>
    </LinearLayout>
</android.support.v7.widget.CardView>